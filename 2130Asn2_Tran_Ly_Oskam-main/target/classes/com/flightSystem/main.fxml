<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.flightSystem.Nhan_Nhu_Justin_Main">
   <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="false" text="Passenger">
               <items>
                  <MenuItem fx:id="passengerMenu" mnemonicParsing="false" onAction="#switchToPassengerScene" text="Go To Passenger Menu" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Flight">
               <items>
                  <MenuItem fx:id="flightMenu" mnemonicParsing="false" onAction="#switchToFlightScene" text="Go To Flight Menu" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Reservation">
               <items>
                  <MenuItem fx:id="reservationMenu" mnemonicParsing="false" onAction="#switchToReservationScene" text="Go To Reservation Menu" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Exit">
               <items>
                  <MenuItem fx:id="exitmenu" mnemonicParsing="false" onAction="#exitApplication" text="Exit The Program" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label alignment="CENTER" prefHeight="57.0" prefWidth="607.0" text="WELCOME TO TRAVEL RESERVATION SYSTEM" textFill="#8987d9">
         <font>
            <Font name="Century Gothic Bold" size="21.0" />
         </font>
      </Label>
      <ImageView fitHeight="285.0" fitWidth="615.0" opacity="0.79" pickOnBounds="true">
         <image>
            <Image url="@../../../../airline-cover.jpg" />
         </image>
      </ImageView>
   </children>
</VBox>
